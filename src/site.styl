body 
  margin: 0
  background #FFFEFA
.page
  max-width 78em
  margin 0 auto
  position relative
  padding 1em 4em
@media(max-width: 600px)
  .page
    padding 10vw

h1
  margin 0

fontsize = 22px

body, input, select, textarea, button
  font-family: "freight-text-pro",Georgia,Cambria,"Times New Roman",Times,serif;
  letter-spacing: .01rem;
  font-weight: 400;
  font-style: normal;
  font-size: fontsize;
  line-height: 1.5;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -moz-font-feature-settings: "liga" on;
  color: rgba(0,0,0,0.8);

.b-font
  font-family: 'Bangers', sans-serif
.up
  text-transform: uppercase

.header
  text-align: center
  img
    width: 2em
  h1
    font-size 3.2em
    line-height 1em
  p
    margin 0

/* clearfix */
.grid:after {
  content: '';
  display: block;
  clear: both;
}

/* ---- grid-item ---- */

.grid-item {
  max-width: 500px;
  max-height: 500px;
}

a
  color rgba(0,0,0,0.8)
  text-decoration: none;
  background-image: linear-gradient(to bottom, rgba(0,0,0,0) 50%, rgba(0,0,0,0.6) 50%);
  background-repeat: repeat-x;
  background-size: 2px 2px;
  background-position: 0 (fontsize + 1px);

.list-unstyled
  list-style: none

.no-padding
  padding 0

tabsize = 2.5em

.rocket
  margin: .1em
  height 1em
  width 1em
  display inline-block
  background-image url(/octicons-rocket.svg)
  background-size contain
  opacity: .8

dd
  margin-left tabsize

.hanging-indent>*
  text-indent -1 * tabsize
  padding-left tabsize

ul
  margin 0

dl
  margin 0
  margin-top 1em

dt
  font-style italic
dt::after
  content ","

.text-center
  text-align center

.teeny-tiny
  color #0009
  font-size 10px
  background-position: 0 9px;
